<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
	<style name="My.Holo.Light.FullScreen" parent="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen">
			<item name="android:windowActionBar">false</item>
			<item name="android:windowNoTitle">true</item>
	</style>
	<style name="My.Holo.Dark.FullScreen" parent="@android:style/Theme.Holo.NoActionBar.Fullscreen">
			<item name="android:windowActionBar">false</item>
			<item name="android:windowNoTitle">true</item>
			<item name="android:textColor">@android:color/white</item>
	</style>
	<style name="MyTheme.Light.FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
			<item name="android:windowActionBar">false</item>
			<item name="android:windowNoTitle">true</item>
			<item name="android:windowFullscreen">true</item>
			<item name="android:windowContentOverlay">@null</item>
	</style>
	<style name="MyTheme.Dark.FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
			<item name="android:windowActionBar">false</item>
			<item name="android:windowNoTitle">true</item>
			<item name="android:windowFullscreen">true</item>
			<item name="android:windowContentOverlay">@null</item>
			<item name="android:textColor">@android:color/white</item>
			<item name="android:colorBackground">@color/primary_dark_material_dark</item>
			<item name="colorPrimaryDark">@color/primary_dark_material_dark</item>
			<item name="colorPrimary">@color/primary_material_dark</item>
			<item name="android:dialogTheme">@style/AlertDialogDark</item>
			<item name="android:alertDialogTheme">@style/AlertDialogDark</item>
	</style>
	<style name="AlertDialogDark" parent="Theme.AppCompat.Light.Dialog.Alert">
		<item name="android:textColorPrimary">@android:color/white</item>
		<!-- Used for the background -->
		<item name="android:background">@color/cardview_dark_background </item>
		<item name="android:buttonBarButtonStyle">@style/MyBorderlessButton</item>
		<item name="android:windowTitleStyle">@style/MyAlertDialogTitle</item>
		<item name="android:alpha">0.9</item>
		<item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
		<item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
		<item name="android:windowIsFloating">true</item>
	</style>
	<style name="MyBorderlessButton"  parent="@android:style/Widget.Button.Small">
		<!-- Set background drawable and text size of the buttons here -->
		<item name="android:background">@android:color/darker_gray</item>
		<item name="android:paddingBottom">5dp</item>
		<item name="android:paddingTop">5dp</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingRight">10dp</item>
		<item name="android:textSize">30sp</item>
		<item name="android:layout_marginLeft">0dp</item>
		<item name="android:layout_marginRight">0dp</item>
		<item name="android:layout_marginBottom">0dp</item>
		<item name="android:layout_marginTop">0dp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:scaleX">0.6</item>
		<item name="android:scaleY">0.6</item>
	</style>
	<style name="MyAlertDialogTitle">
		<item name="android:maxLines">1</item>
		<item name="android:scrollHorizontally">true</item>
		<item name="android:textSize">18sp</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="AlertDialogDark_two" parent="@android:style/Theme.Dialog">
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:textStyle">bold</item>
		<item name="android:headerDividersEnabled">true</item>
		<item name="android:typeface">normal</item>
		<item name="android:background">@color/primary_dark_material_dark</item>
		<item name="android:alpha">0.95</item>
	</style>
</resources>

